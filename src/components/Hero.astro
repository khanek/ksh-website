---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-name">{t.hero.name}</h1>
      <h2 class="hero-title">{t.hero.title}</h2>
      <p class="hero-subtitle">{t.hero.subtitle}</p>
      <a href="#contact" class="hero-cta">{t.hero.cta}</a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: calc(var(--spacing-xl) * 1.5) 0 var(--spacing-xl);
    text-align: center;
    background: linear-gradient(to bottom, var(--color-bg) 0%, var(--color-card-bg) 100%);
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-name {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent);
    background: var(--color-accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }
  
  @supports not (-webkit-background-clip: text) {
    .hero-name {
      color: var(--color-accent);
      background: none;
    }
  }
  
  .hero-title {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto var(--spacing-lg);
    line-height: 1.7;
  }
  
  .hero-cta {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-accent-gradient);
    color: white;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: var(--font-size-lg);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }
  
  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
    color: white;
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-lg) 0;
    }
    
    .hero-subtitle {
      margin-bottom: var(--spacing-md);
    }
    
    .hero-cta {
      padding: 0.875rem 1.75rem;
      font-size: var(--font-size-base);
    }
  }
  
  @media print {
    .hero {
      padding: 0.5cm 0;
      text-align: left;
    }
    
    .hero-content h1 {
      font-size: 24pt;
      margin-bottom: 0.2cm;
    }
    
    .hero-content h2 {
      font-size: 14pt;
      margin-bottom: 0.3cm;
    }
    
    .hero-subtitle {
      font-size: 11pt;
      margin-bottom: 0.5cm;
    }
  }
</style>
