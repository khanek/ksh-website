---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);

const sections = [
  { id: 'about', label: t.about.title },
  { id: 'projects', label: t.projects.title },
  { id: 'skills', label: t.skills.title },
  { id: 'contact', label: t.contact.title },
];
---

<nav class="section-nav" id="section-nav">
  <div class="container">
    <ul class="section-nav-list">
      {sections.map((section) => (
        <li>
          <a 
            href={`#${section.id}`} 
            class="section-nav-link"
            data-section={section.id}
          >
            {section.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  // Scroll spy implementation
  function initScrollSpy() {
    const nav = document.getElementById('section-nav');
    const links = document.querySelectorAll('.section-nav-link');
    const sections = Array.from(links).map(link => {
      const id = link.getAttribute('data-section');
      return document.getElementById(id);
    }).filter(Boolean);

    if (!nav || sections.length === 0) return;

    let ticking = false;
    let isScrollingProgrammatically = false;
    let scrollTimeout: number | null = null;

    function setActiveLink(sectionId: string) {
      links.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('data-section') === sectionId) {
          link.classList.add('active');
        }
      });
    }

    function updateActiveLink() {
      if (isScrollingProgrammatically) {
        ticking = false;
        return;
      }

      const headerHeight = 60;
      const navHeight = nav?.offsetHeight || 0;
      const scrollPos = window.scrollY + headerHeight + navHeight + 50;

      let currentSection = '';
      
      // Find the section that is currently in view
      for (let i = sections.length - 1; i >= 0; i--) {
        const section = sections[i];
        const sectionTop = section.offsetTop;
        
        if (scrollPos >= sectionTop) {
          currentSection = section.id;
          break;
        }
      }

      // Default to first section if at top of page
      if (!currentSection && window.scrollY < 200) {
        currentSection = sections[0]?.id || '';
      }

      if (currentSection) {
        setActiveLink(currentSection);
      }

      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(updateActiveLink);
        ticking = true;
      }

      // Detect end of programmatic scroll
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      scrollTimeout = window.setTimeout(() => {
        isScrollingProgrammatically = false;
        updateActiveLink();
      }, 100);
    }

    // Smooth scroll on click
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('data-section');
        const target = document.getElementById(targetId);
        
        if (target) {
          // Set active immediately on click
          setActiveLink(targetId);
          
          // Disable automatic scroll spy during smooth scroll
          isScrollingProgrammatically = true;
          
          const headerHeight = 60;
          const navHeight = nav.offsetHeight;
          const targetPosition = target.offsetTop - headerHeight - navHeight;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });

          // Re-enable scroll spy after scroll completes
          setTimeout(() => {
            isScrollingProgrammatically = false;
            updateActiveLink();
          }, 800);
        }
      });
    });

    window.addEventListener('scroll', onScroll, { passive: true });
    updateActiveLink(); // Initial check
  }

  // Initialize on load and on view transitions
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollSpy);
  } else {
    initScrollSpy();
  }

  // Re-initialize on Astro view transitions if used
  document.addEventListener('astro:page-load', initScrollSpy);
</script>

<style>
  .section-nav {
    position: sticky;
    top: 60px; /* below header */
    z-index: 90;
    background-color: var(--color-card-bg);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0 1px 3px var(--color-shadow);
    backdrop-filter: blur(10px);
  }

  [data-theme="dark"] .section-nav {
    background-color: rgba(30, 41, 59, 0.95);
  }

  [data-theme="light"] .section-nav {
    background-color: rgba(255, 255, 255, 0.95);
  }

  .section-nav .container {
    padding-top: 0;
    padding-bottom: 0;
  }

  .section-nav-list {
    display: flex;
    gap: 0;
    list-style: none;
    margin: 0;
    padding: 0;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .section-nav-list::-webkit-scrollbar {
    display: none;
  }

  .section-nav-list li {
    flex-shrink: 0;
  }

  .section-nav-link {
    display: block;
    padding: 1rem 1.25rem;
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-decoration: none;
    position: relative;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .section-nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent-gradient);
    transform: scaleX(0);
    transition: transform 0.2s ease;
  }

  .section-nav-link:hover {
    color: var(--color-text);
  }

  .section-nav-link.active {
    color: var(--color-accent);
  }

  .section-nav-link.active::after {
    transform: scaleX(1);
  }

  @media (max-width: 768px) {
    .section-nav-link {
      padding: 0.875rem 1rem;
      font-size: 0.8125rem;
    }
  }

  @media print {
    .section-nav {
      display: none !important;
    }
  }
</style>
