---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  lang: string;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
const t = await import(`../i18n/${lang}.json`);

const otherLang = lang === 'en' ? 'pl' : 'en';
const otherLangPath = lang === 'en' ? '/pl' : '/';
---

<header>
  <nav class="container">
    <div class="nav-content">
      <a href={lang === 'en' ? '/' : '/pl'} class="logo">
        KH
      </a>
      
      <div class="nav-right">
        <div class="language-switcher">
          <a 
            href={otherLangPath}
            class={currentPath === otherLangPath ? 'active' : ''}
            aria-label={`Switch to ${otherLang.toUpperCase()}`}
          >
            {otherLang.toUpperCase()}
          </a>
        </div>
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    backdrop-filter: blur(10px);
  }
  
  [data-theme="dark"] header {
    background-color: rgba(15, 23, 42, 0.95);
  }
  
  [data-theme="light"] header {
    background-color: rgba(255, 255, 255, 0.95);
  }
  
  nav {
    padding: var(--spacing-sm) var(--spacing-md);
  }
  
  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }
  
  .nav-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }
  
  .language-switcher a {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }
  
  .language-switcher a:hover {
    background-color: var(--color-card-bg);
  }
  
  @media print {
    header {
      display: none !important;
    }
  }
</style>
