---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);
---

<section class="skills" id="skills">
  <div class="container">
    <h2 class="skills-title">{t.skills.title}</h2>
    <div class="roadmap-tree">
      <div class="tree-branches">
        {t.skills.categories.map((category, categoryIndex) => (
          <div class="tree-branch" data-branch={categoryIndex}>
            <div class="branch-category">
              <div class="category-node">{category.title}</div>
            </div>
            <div class="branch-items">
              {category.items.map((item, itemIndex) => (
                <div 
                  class={`skill-item ${item.status === 'known' ? 'skill-known' : 'skill-learning'}`}
                  data-item={itemIndex}
                >
                  <span class="skill-name">{item.name}</span>
                  {item.status === 'learning' && (
                    <span class="learning-badge">learning</span>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    padding: var(--spacing-lg) 0;
    background-color: var(--color-bg);
  }
  
  .skills-title {
    text-align: center;
  }
  
  .roadmap-tree {
    position: relative;
    padding-top: var(--spacing-lg);
  }
  
  .tree-root {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    position: relative;
  }
  
  .root-node {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-accent-gradient);
    color: white;
    border-radius: 0.75rem;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(109, 40, 217, 0.3);
  }
  
  .tree-branches {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
    position: relative;
  }
  
  .tree-branch {
    position: relative;
    padding-left: 2rem;
  }
  
  .tree-branch::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-accent);
    opacity: 0.3;
  }
  
  .branch-category {
    margin-bottom: var(--spacing-md);
    position: relative;
  }
  
  .branch-category::before {
    content: '';
    position: absolute;
    left: -2rem;
    top: 50%;
    width: 1.5rem;
    height: 2px;
    background: var(--color-accent);
    opacity: 0.3;
  }
  
  .category-node {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-card-bg);
    color: var(--color-text);
    border-radius: 0.5rem;
    font-size: var(--font-size-xl);
    font-weight: 600;
    border: 2px solid var(--color-accent);
    box-shadow: 0 2px 6px var(--color-shadow);
  }
  
  .branch-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-left: 1rem;
    position: relative;
  }
  
  .branch-items::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
    opacity: 0.5;
  }
  
  .skill-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: all 0.2s ease;
    position: relative;
  }
  
  .skill-known {
    background: var(--color-accent);
    color: white;
    border: 2px solid var(--color-accent);
  }
  
  .skill-known:hover {
    background: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(109, 40, 217, 0.3);
  }
  
  .skill-learning {
    background: transparent;
    color: var(--color-text-secondary);
    border: 2px dashed var(--color-border);
  }
  
  .skill-learning:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
  
  .skill-name {
    display: inline-block;
  }
  
  .learning-badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    border-radius: 0.25rem;
    font-size: 0.7rem;
    font-weight: 400;
    text-transform: lowercase;
  }
  
  @media (min-width: 768px) {
    .tree-branches {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-xl);
    }
    
    .tree-branch {
      padding-left: 2.5rem;
    }
    
    .tree-branch::before {
      width: 3px;
    }
    
    .branch-category::before {
      width: 2rem;
    }
  }
  
  @media (min-width: 1024px) {
    .tree-branches {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 767px) {
    .root-node {
      font-size: var(--font-size-xl);
      padding: 0.75rem 1.5rem;
    }
    
    .tree-branch {
      padding-left: 1.5rem;
    }
    
    .category-node {
      font-size: var(--font-size-lg);
      padding: 0.5rem 1rem;
    }
    
    .skill-item {
      padding: 0.4rem 0.875rem;
      font-size: 0.8125rem;
    }
  }
  
  @media print {
    .skills {
      background-color: transparent;
      padding: 0.5cm 0;
    }
    
    .roadmap-tree {
      padding-top: 0.5cm;
    }
    
    .root-node {
      background: transparent;
      color: #000;
      border: 2pt solid #000;
      padding: 0.3cm 0.6cm;
      font-size: 14pt;
    }
    
    .tree-branch::before,
    .branch-category::before,
    .branch-items::before {
      display: none;
    }
    
    .category-node {
      background: transparent;
      border: 1pt solid #000;
      padding: 0.2cm 0.4cm;
      font-size: 11pt;
    }
    
    .skill-known {
      background: transparent;
      color: #000;
      border: 1pt solid #000;
      padding: 0.1cm 0.3cm;
    }
    
    .skill-learning {
      border-style: dashed;
      border-width: 1pt;
      padding: 0.1cm 0.3cm;
    }
    
    .learning-badge {
      display: none;
    }
  }
</style>
