---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);

const projectKeys = ['dmw', 'saas', 'kandua', 'worldexpo', 'questpass', 'less'];
const projects = projectKeys.map((key) => ({
  key,
  ...t.projects[key]
}));
---

<section class="projects" id="projects">
  <div class="container">
    <div class="content">
      <h2>{t.projects.title}</h2>
      <div class="projects-grid">
        {projects.map((project) => (
          <article class="project-card">
            <header class="project-header">
              <h3>{project.name}</h3>
            </header>

            <p class="project-summary">{project.summary ?? project.description}</p>

            {project.highlights && (
              <ul class="project-highlights">
                {project.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            )}

            {project.technologies && (
              <div class="project-technologies" aria-label="Technologies">
                {project.technologies.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-lg) 0;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }
  
  .project-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: var(--spacing-md);
    box-shadow: 0 1px 3px var(--color-shadow);
    position: relative;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .project-card::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--color-accent-gradient);
  }
  
  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--color-shadow-hover);
  }
  
  .project-header h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
    font-weight: 600;
  }
  
  .project-summary {
    font-size: var(--font-size-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .project-highlights {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md);
    display: grid;
    gap: 0.5rem;
  }
  
  .project-highlights li {
    position: relative;
    padding-left: 1.25rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .project-highlights li::before {
    content: "â–¹";
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }
  
  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    border-radius: 0.375rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }
  
  .tech-badge:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }
  
  @media (max-width: 768px) {
    .project-card {
      padding: var(--spacing-sm);
    }
  }
  
  @media print {
    .projects {
      padding: 0.5cm 0;
    }
    
    .projects-grid {
      margin-top: 0.5cm;
      display: block;
    }
    
    .project-card {
      margin-bottom: 0.5cm;
      padding: 0.35cm 0.35cm;
      border: 0.5pt solid #000;
      border-radius: 0.2cm;
      box-shadow: none;
      page-break-inside: avoid;
    }
    
    .project-card::before {
      display: none;
    }
    
    .project-header h3 {
      font-size: 12pt;
      margin-bottom: 0.2cm;
    }
    
    .project-summary {
      font-size: 10pt;
      margin-bottom: 0.3cm;
    }
    
    .project-highlights {
      margin-bottom: 0.3cm;
    }
    
    .tech-badge {
      padding: 0.1cm 0.3cm;
      margin: 0.05cm 0.2cm 0.05cm 0;
      border: 0.5pt solid #000;
      background: transparent;
      color: #000;
      font-size: 8pt;
    }
  }
</style>
