---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);

const projectKeys = ['dmw', 'saas', 'kandua', 'worldexpo', 'questpass', 'less'];
const projects = projectKeys.map((key) => ({
  key,
  ...t.projects[key]
}));
---

<section class="projects" id="projects">
  <div class="container">
    <h2 class="projects-title">{t.projects.title}</h2>
    <div class="projects-grid">
        {projects.map((project) => (
          <article class="project-card">
            <header class="project-header">
              {project.url ? (
                <h3><a href={project.url} target="_blank" rel="noopener noreferrer">{project.name}</a></h3>
              ) : (
                <h3>{project.name}</h3>
              )}
            </header>

            {project.description && (
              <div class="project-description-wrapper">
                <p class="project-description" data-project={project.key}>{project.description}</p>
                <button 
                  class="toggle-description" 
                  data-project={project.key}
                  aria-expanded="false"
                  aria-label={t.projects.showMore}
                >
                  <span class="toggle-text" data-show-more={t.projects.showMore} data-show-less={t.projects.showLess}>{t.projects.showMore}</span>
                  <span class="toggle-icon">▼</span>
                </button>
              </div>
            )}
            {project.summary && !project.description && (
              <p class="project-summary">{project.summary}</p>
            )}

            {project.highlights && (
              <ul class="project-highlights">
                {project.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            )}

            {project.technologies && (
              <div class="project-technologies" aria-label="Technologies">
                {project.technologies.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            )}
          </article>
        ))}
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-lg) 0;
    background-color: var(--color-card-bg);
  }
  
  .projects-title {
    text-align: center;
    margin-bottom: var(--spacing-md);
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }
  
  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .project-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: var(--spacing-md);
    box-shadow: 0 1px 3px var(--color-shadow);
    position: relative;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .project-card::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--color-accent-gradient);
  }
  
  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--color-shadow-hover);
  }
  
  .project-header h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
    font-weight: 600;
  }
  
  .project-header h3 a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .project-header h3 a:hover {
    color: var(--color-accent);
  }
  
  .project-summary,
  .project-description {
    font-size: var(--font-size-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 0;
    transition: max-height 0.3s ease, opacity 0.3s ease;
  }
  
  .project-description-wrapper {
    margin-bottom: var(--spacing-md);
  }
  
  .project-description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-height: calc(1.7em * 3);
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .project-description.expanded {
    display: block;
    -webkit-line-clamp: unset;
    max-height: 2000px;
  }
  
  .toggle-description {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    padding: 0.5rem 0;
    background: none;
    border: none;
    color: var(--color-accent);
    font-size: var(--font-size-sm);
    font-weight: 500;
    cursor: pointer;
    transition: color 0.2s ease;
    font-family: inherit;
  }
  
  .toggle-description:hover {
    color: var(--color-accent);
    opacity: 0.8;
  }
  
  .toggle-icon {
    display: inline-block;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 0.75rem;
  }
  
  .toggle-description[aria-expanded="true"] .toggle-icon {
    transform: rotate(180deg);
  }
  
  
  .project-highlights {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md);
    display: grid;
    gap: 0.5rem;
  }
  
  .project-highlights li {
    position: relative;
    padding-left: 1.25rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .project-highlights li::before {
    content: "▹";
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }
  
  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    border-radius: 0.375rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }
  
  .tech-badge:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }
  
  @media (max-width: 768px) {
    .project-card {
      padding: var(--spacing-sm);
    }
  }
  
  @media print {
    .projects {
      padding: 0.5cm 0;
    }
    
    .projects-grid {
      margin-top: 0.5cm;
      display: block;
    }
    
    .project-card {
      margin-bottom: 0.5cm;
      padding: 0.35cm 0.35cm;
      border: 0.5pt solid #000;
      border-radius: 0.2cm;
      box-shadow: none;
      page-break-inside: avoid;
    }
    
    .project-card::before {
      display: none;
    }
    
    .project-header h3 {
      font-size: 12pt;
      margin-bottom: 0.2cm;
    }
    
    .project-summary {
      font-size: 10pt;
      margin-bottom: 0.3cm;
    }
    
    .project-highlights {
      margin-bottom: 0.3cm;
    }
    
    .tech-badge {
      padding: 0.1cm 0.3cm;
      margin: 0.05cm 0.2cm 0.05cm 0;
      border: 0.5pt solid #000;
      background: transparent;
      color: #000;
      font-size: 8pt;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('.toggle-description');
    
    toggleButtons.forEach(button => {
      const projectKey = button.getAttribute('data-project');
      const description = document.querySelector(`.project-description[data-project="${projectKey}"]`);
      
      // Check if description needs truncation
      if (description) {
        const lineHeight = parseFloat(getComputedStyle(description).lineHeight);
        const maxHeight = lineHeight * 3;
        const actualHeight = description.scrollHeight;
        
        // Hide button if content doesn't need truncation
        if (actualHeight <= maxHeight) {
          button.style.display = 'none';
          return;
        }
      }
      
      button.addEventListener('click', () => {
        const toggleText = button.querySelector('.toggle-text');
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        
        if (description && toggleText) {
          if (isExpanded) {
            description.classList.remove('expanded');
            button.setAttribute('aria-expanded', 'false');
            toggleText.textContent = toggleText.getAttribute('data-show-more');
          } else {
            description.classList.add('expanded');
            button.setAttribute('aria-expanded', 'true');
            toggleText.textContent = toggleText.getAttribute('data-show-less');
          }
        }
      });
    });
  });
</script>
