---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = await import(`../i18n/${lang}.json`);
---

<section class="projects" id="projects">
  <div class="container">
    <div class="content">
      <h2>{t.projects.title}</h2>
      <div class="projects-list">
        <div class="project-item">
          <h3>{t.projects.dmw.name}</h3>
          <p>{t.projects.dmw.description}</p>
          {t.projects.dmw.technologies && (
            <div class="project-technologies">
              {t.projects.dmw.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
        
        <div class="project-item">
          <h3>{t.projects.saas.name}</h3>
          <p>{t.projects.saas.description}</p>
          {t.projects.saas.technologies && (
            <div class="project-technologies">
              {t.projects.saas.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
        
        <div class="project-item">
          <h3>{t.projects.kandua.name}</h3>
          <p>{t.projects.kandua.description}</p>
          {t.projects.kandua.technologies && (
            <div class="project-technologies">
              {t.projects.kandua.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
        
        <div class="project-item">
          <h3>{t.projects.worldexpo.name}</h3>
          <p>{t.projects.worldexpo.description}</p>
          {t.projects.worldexpo.technologies && (
            <div class="project-technologies">
              {t.projects.worldexpo.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
        
        <div class="project-item">
          <h3>{t.projects.questpass.name}</h3>
          <p>{t.projects.questpass.description}</p>
          {t.projects.questpass.technologies && (
            <div class="project-technologies">
              {t.projects.questpass.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
        
        <div class="project-item">
          <h3>{t.projects.less.name}</h3>
          <p>{t.projects.less.description}</p>
          {t.projects.less.technologies && (
            <div class="project-technologies">
              {t.projects.less.technologies.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-lg) 0;
  }
  
  .projects-list {
    margin-top: var(--spacing-md);
  }
  
  .project-item {
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border);
    transition: transform 0.2s ease;
  }
  
  .project-item:hover {
    transform: translateX(4px);
  }
  
  .project-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .project-item h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
    font-weight: 600;
  }
  
  .project-item p {
    font-size: var(--font-size-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: var(--spacing-sm);
  }
  
  .tech-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    border-radius: 0.375rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }
  
  .tech-badge:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }
  
  @media print {
    .projects {
      padding: 0.5cm 0;
    }
    
    .projects-list {
      margin-top: 0.5cm;
    }
    
    .project-item {
      margin-bottom: 0.5cm;
      padding-bottom: 0.4cm;
      border-bottom: 0.5pt solid #000;
      page-break-inside: avoid;
    }
    
    .project-item:last-child {
      border-bottom: none;
    }
    
    .project-item h3 {
      font-size: 12pt;
      margin-bottom: 0.2cm;
    }
    
    .project-item p {
      font-size: 10pt;
      margin-bottom: 0.3cm;
    }
    
    .project-technologies {
      margin-top: 0.2cm;
    }
    
    .tech-badge {
      padding: 0.1cm 0.3cm;
      margin: 0.05cm 0.2cm 0.05cm 0;
      border: 0.5pt solid #000;
      background: transparent;
      color: #000;
      font-size: 8pt;
    }
  }
</style>
